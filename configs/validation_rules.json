{
  "fields": {
    "title": {
      "type": "string",
      "required": true,
      "max_length": 65
    },
    "external_link": {
      "type": "string",
      "required": true,
      "regex": "^https?://"
    },
    "created_at": {
      "type": "date",
      "required": true,
      "formats": ["%Y-%m-%d", "%Y-%m-%dT%H:%M:%S"]
    },
    "summary": {
      "type": "string",
      "required": false,
      "max_length": 2000
    },
    "rtype_id": {
      "type": "integer",
      "required": false
    },
    "classification_id": {
      "type": "integer",
      "required": false
    },
    "entity": {
      "type": "string",
      "required": true,
      "allowed_values": ["ANI"]
    },
    "gtype": {
      "type": "string",
      "required": false
    },
    "is_active": {
      "type": "boolean",
      "required": false
    }
  }
}
